<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_button_fromregister1"
        android:layout_width="13dp"
        android:layout_height="12dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/back_button" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/register_header"
        android:layout_width="148dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/register_header"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_input_field"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="@string/email_address"
        android:background="@drawable/inputfields"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:background="@drawable/inputfields"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_page_button"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/register_page_button"/>

</androidx.appcompat.widget.LinearLayoutCompat>