<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_r"
    android:visibility="visible"

    >


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/mountainsImage"
        android:layout_width="374dp"
        android:layout_height="460dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/image_shadow"
        android:src="@drawable/mountains_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/archive_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:alpha="0.4"
        android:background="@drawable/button_border"
        app:layout_constraintEnd_toEndOf="@id/mountainsImage"
        app:layout_constraintTop_toTopOf="@id/mountainsImage"
        tools:layout_editor_absoluteX="335dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/Archive"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="1.0"
        android:elevation="4dp"
        android:src="@drawable/archive"
        app:layout_constraintBottom_toBottomOf="@+id/archive_button"
        app:layout_constraintEnd_toEndOf="@id/archive_button"
        app:layout_constraintStart_toStartOf="@+id/archive_button"
        app:layout_constraintTop_toTopOf="@id/archive_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:alpha="0.4"
        android:background="@drawable/button_border"
        app:layout_constraintStart_toStartOf="@id/mountainsImage"
        app:layout_constraintTop_toTopOf="@id/mountainsImage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow"
        android:layout_width="25dp"
        android:layout_height="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="1.0"
        android:elevation="4dp"
        android:src="@drawable/icon_arrow_left"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="@id/back_button"
        app:layout_constraintStart_toStartOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="@id/back_button" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/container_of_location"
        android:layout_width="331dp"
        android:layout_height="104dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/container_border"
        android:src="@drawable/rectangle_32"
        app:layout_constraintEnd_toEndOf="@id/mountainsImage"
        app:layout_constraintStart_toStartOf="@id/mountainsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/location_name"
        android:layout_width="190dp"
        android:layout_height="29dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="370dp"
        android:elevation="40dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/container_of_location"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/marker"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/marker"
        app:layout_constraintBottom_toBottomOf="@id/container_of_location"
        app:layout_constraintStart_toStartOf="@id/container_of_location" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/location"
        android:layout_width="122dp"
        android:layout_height="21dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="15dp"
        android:elevation="40dp"
        android:lineHeight="21.09dp"
        android:textAlignment="center"
        android:textColor="#CAC8C8"
        android:textFontWeight="400"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/container_of_location"
        app:layout_constraintStart_toEndOf="@id/marker" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="37dp"
        android:layout_height="19dp"
        android:layout_marginStart="257dp"
        android:layout_marginTop="26dp"
        android:elevation="40dp"
        android:lineHeight="18.75dp"
        android:textAlignment="center"
        android:textColor="#CAC8C8"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/location_name"
        app:layout_constraintTop_toTopOf="@id/container_of_location" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price_in_dollars"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="239dp"
        android:layout_marginTop="58dp"
        android:elevation="40dp"
        android:lineHeight="30.47dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="500"
        android:textSize="26sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/location_name"
        app:layout_constraintTop_toTopOf="@id/container_of_location" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/overview"
        android:layout_width="102dp"
        android:layout_height="27dp"
        android:layout_marginTop="528dp"
        android:lineHeight="26.63sp"
        android:text="Overview"
        android:textAlignment="center"
        android:textColor="#1b1b1b"
        android:textFontWeight="600"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/mountainsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/details"
        android:layout_width="54dp"
        android:layout_height="19dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="536dp"
        android:lineHeight="26.63sp"
        android:text="Details"
        android:textAlignment="center"
        android:textColor="#1b1b1b"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/overview"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon1"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="587dp"
        android:background="@drawable/icon_border"
        app:layout_constraintStart_toStartOf="@+id/mountainsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hours"
        android:layout_width="54dp"
        android:layout_height="19dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="593dp"
        android:text="8 hours"
        android:textAlignment="center"
        android:textColor="#7e7e7e"
        android:textFontWeight="600"
        app:layout_constraintStart_toEndOf="@+id/icon1"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="21.09dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon2"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="587dp"
        android:background="@drawable/icon_border"
        app:layout_constraintStart_toStartOf="@+id/mountainsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weather"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="593dp"
        android:text="16Â°C"
        android:textAlignment="center"
        android:textColor="#7e7e7e"
        android:textFontWeight="500"
        app:layout_constraintStart_toEndOf="@+id/icon2"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="21.09dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon3"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="587dp"
        android:background="@drawable/icon_border"
        app:layout_constraintStart_toStartOf="@+id/mountainsImage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stars"
        android:layout_width="26dp"
        android:layout_height="21dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="593dp"
        android:text="4.5"
        android:textAlignment="center"
        android:textColor="#7e7e7e"
        android:textFontWeight="500"
        app:layout_constraintStart_toEndOf="@+id/icon3"
        app:layout_constraintTop_toTopOf="parent"
        app:lineHeight="21.09dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/clock"
        app:layout_constraintStart_toStartOf="@id/icon1"
        app:layout_constraintTop_toTopOf="@+id/icon1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="18dp"
        android:layout_height="14.79dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/cloud"
        app:layout_constraintStart_toStartOf="@id/icon2"
        app:layout_constraintTop_toTopOf="@+id/icon2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/star"
        app:layout_constraintStart_toStartOf="@id/icon3"
        app:layout_constraintTop_toTopOf="@+id/icon3" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fadeScrollbars="true"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="655dp"
            android:layout_marginEnd="28dp"
            android:lineHeight="27.03dp"
            android:textColor="#a5a5a5"
            android:textFontWeight="500"
            android:textSize="18sp"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="12dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/booking_button"
        android:layout_width="373dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="810dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/booking_button_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/book_now"
        android:layout_width="92dp"
        android:layout_height="23dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="22dp"
        android:elevation="8dp"
        android:lineHeight="23.44sp"
        android:text="Book Now"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="500"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/booking_button"
        app:layout_constraintTop_toTopOf="@+id/booking_button" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/send_icon"
        android:layout_width="23dp"
        android:layout_height="23.01dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:elevation="8dp"
        android:src="@drawable/send"
        app:layout_constraintStart_toEndOf="@id/book_now"
        app:layout_constraintTop_toTopOf="@+id/booking_button" />


</androidx.constraintlayout.widget.ConstraintLayout>